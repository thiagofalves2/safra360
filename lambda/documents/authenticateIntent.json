{
    "type": "APL",
    "version": "1.5",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.2.0"
        }
    ],
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "items": [
                    {
                        "type": "AlexaBackground",
                        "backgroundImageSource": "${payload.datasources.basicBackgroundData.backgroundImage}",
                        "colorOverlay": true
                    },
                    {
                        "type": "AlexaHeader",
                        "headerTitle": "${payload.datasources.basicHeaderData.headerTitle}",
                        "headerSubtitle": "${payload.datasources.basicHeaderData.headerSubtitle}",
                        "headerDivider": true,
                        "headerAttributionImage": "${payload.datasources.basicHeaderData.headerAttributionImage}"
                    },
                    {
                        "type": "Pager",
                        "id": "pagerComponentId",
                        "width": "100vw",
                        "height": "100vh",
                        "opacity": 1,
                        "alignSelf": "center",
                        "position": "relative",
                        "items": [
                            {
                                "type": "Text",
                                "text": "${payload.datasources.basicHeaderData.textToDisplay}",
                                "style": "${payload.datasources.basicHeaderData.textStyle}",
                                "paddingTop": "@spacing3XLarge",
                                "paddingLeft": "@marginHorizontal",
                                "paddingRight": "@marginHorizontal",
                                "textAlign": "center"
                            },
                            {
                                "type": "Text",
                                "text": "${payload.datasources.basicHeaderData.textToDisplay2}",
                                "style": "${payload.datasources.basicHeaderData.textStyle2}",
                                "paddingTop": "@spacing3XLarge",
                                "paddingLeft": "@marginHorizontal",
                                "paddingRight": "@marginHorizontal",
                                "textAlign": "center"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}